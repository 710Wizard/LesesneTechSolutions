        };

        let currentLang = 'en'; // Default language

        /**
         * Sets the language of the page based on the provided language code.
         * Updates all elements with `data-lang-key` attributes and the active language button.
         * Stores the selected language in local storage.
         * @param {string} lang - The language code (e.g., 'en', 'pt', 'es').
         */
        function setLanguage(lang) {
            currentLang = lang;
            // Iterate over all elements that have a 'data-lang-key' attribute
            document.querySelectorAll('[data-lang-key]').forEach(element => {
                const key = element.getAttribute('data-lang-key'); // Get the translation key
                // Check if the translation exists for the current language and key
                if (translations[lang] && translations[lang][key]) {
                    // Use innerHTML to allow for HTML tags within the translated text (e.g., <strong>, <br>)
                    element.innerHTML = translations[lang][key];
                }
            });

            // Update the 'lang' attribute of the HTML tag for better accessibility and SEO
            document.documentElement.lang = lang;

            // Update the visual active state of the language buttons
            document.querySelectorAll('.lang-button').forEach(button => {
                if (button.dataset.lang === lang) {
                    // Add active styling for the selected language button
                    button.classList.add('bg-red-500', 'text-white');
                    button.classList.remove('bg-gray-200', 'hover:bg-red-100', 'text-gray-800');
                } else {
                    // Remove active styling from other language buttons
                    button.classList.remove('bg-red-500', 'text-white');
                    button.classList.add('bg-gray-200', 'hover:bg-red-100', 'text-gray-800');
                }
            });

            // Store the selected language in local storage so it persists across sessions
            localStorage.setItem('preferredLang', lang);
        }

        // Add click event listeners to all language buttons
        document.querySelectorAll('.lang-button').forEach(button => {
            button.addEventListener('click', (event) => {
                // Call setLanguage with the language code from the button's 'data-lang' attribute
                setLanguage(event.target.dataset.lang);
            });
        });

        // DOMContentLoaded ensures the script runs after the entire HTML document has been loaded
        document.addEventListener('DOMContentLoaded', () => {
            // Check if a preferred language is stored in local storage
            const storedLang = localStorage.getItem('preferredLang');
            if (storedLang && translations[storedLang]) {
                // If a preferred language is found and valid, set it
                setLanguage(storedLang);
            } else {
                // Otherwise, set the default language (English)
                setLanguage(currentLang);
            }

            // --- Navigation Active Link Logic ---
            const navLinks = document.querySelectorAll('.nav-link'); // All navigation links
            const sections = document.querySelectorAll('main section'); // All main content sections

            /**
             * Updates the 'active' class on navigation links based on current scroll position.
             */
            function updateActiveNavLink() {
                let currentActive = ''; // To store the ID of the currently active section
                sections.forEach(section => {
                    // Calculate section top position, adjusting for the fixed header height
                    const sectionTop = section.offsetTop - 70;
                    const sectionHeight = section.clientHeight;
                    if (window.scrollY >= sectionTop && window.scrollY < sectionTop + sectionHeight) {
                        currentActive = section.id; // Set the current active section ID
                    }
                });

                // Remove 'active' class from all links and add it to the current active one
                navLinks.forEach(link => {
                    link.classList.remove('active');
                    // Check if the link's href includes the ID of the current active section
                    if (link.href.includes(currentActive)) {
                        link.classList.add('active');
                    }
                });
            }

            // Initial call to set the active link on page load
            updateActiveNavLink();

            // Add scroll event listener to update active link as the user scrolls
            window.addEventListener('scroll', updateActiveNavLink);

            // --- Mobile Menu Functionality ---
            const mobileMenuButton = document.getElementById('mobile-menu-button'); // Hamburger icon button
            const mobileMenu = document.getElementById('mobile-menu'); // The mobile menu dropdown

            // Toggle mobile menu visibility on button click
            mobileMenuButton.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden'); // Toggles the 'hidden' Tailwind class
            });

            // Close mobile menu when a navigation link inside it is clicked
            mobileMenu.querySelectorAll('.nav-link').forEach(link => {
                link.addEventListener('click', () => {
                    mobileMenu.classList.add('hidden'); // Hide the mobile menu
                });
            });
        });
    </script>
</body>
</html>
